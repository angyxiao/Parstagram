<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/postCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/postProfile"
        android:layout_below="@+id/postUser"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/postUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/postImage"
        android:layout_below="@+id/postImage"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/postTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/postCaption"
        android:layout_alignStart="@+id/postCaption"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/postProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/postImage"
        android:layout_alignTop="@+id/postCaption"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_profile" />

</RelativeLayout>